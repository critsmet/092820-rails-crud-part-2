<h2>Edit A Kombucha!</h2>

<%= form_with model: @kombucha do |f| %>
  <%= f.label :flavor %>
  <%= f.text_field  :flavor%>
  <br>
  <%= f.label :brew_time %>
  <%= f.number_field :brew_time %>
  <br>
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <br>
  <%= f.submit %>
<% end %>

<br>

<%= form_with model: @kombucha, method: :delete do |f| %>
  <%= f.submit "Delete This Kombucha" %>
<% end %>
